        android:layout_height="134dp"
        android:layout_marginTop="483dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/editCinema"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cine"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editTVShows"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tv"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editMusic"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/music"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editFood"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/food"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editOutdoor"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/viaje"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editCulture"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/culture"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editBooks"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/books"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editVideoGames"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/videogames"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editSports"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/sports"
                android:drawableEnd="@drawable/baseline_add_circle_outline_white_18dp"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
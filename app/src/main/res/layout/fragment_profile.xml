        android:layout_marginStart="45dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="374dp"
        android:fontFamily="@font/aladin"
        android:text="Mis Preferencias"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPreferencias"
        android:layout_width="308dp"
        android:layout_height="34dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTotalPreferencies"
        android:layout_width="232dp"
        android:layout_height="32dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="422dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="277dp"
        android:fontFamily="@font/aladin"
        android:text="Seleccionar preferencias"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Seleccionar preferencias" />

    <HorizontalScrollView

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/imageViewFondo"
        android:layout_width="409dp"
        android:layout_height="130dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="601dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@android:color/holo_blue_dark"
        tools:srcCompat="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="219dp"
        android:layout_height="85dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="536dp"
        android:fontFamily="@font/aladin"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/buttonChangeProfileData"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="657dp"
        android:alpha="@dimen/material_emphasis_medium"
        android:background="@drawable/outline_settings_white_18dp"
        android:backgroundTint="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="547dp"
        android:background="@drawable/borde_redondo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_profile" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="522dp"
        android:fontFamily="@font/aladin"
        android:text="@string/mis_datos"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="487dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewActualPreferences"
        android:layout_width="235dp"
        android:layout_height="30dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="457dp"
        android:fontFamily="@font/aladin"
        android:text="@string/mis_preferencias_actuales"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewPreferencias"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="407dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddPreferences"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="297dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="457dp"
        android:background="@drawable/baseline_add_circle_outline_white_18dp"
        android:backgroundTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="373dp"
        android:layout_marginTop="439dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewPreferences"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfileActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="355dp"
        android:layout_height="72dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="583dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/arrow_right_black_18dp"
        android:text="Log Out"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Log Out" />

    <Button
        android:id="@+id/buttonName"
        android:layout_width="362dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="381dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/arrow_right_black_18dp"
        android:text="Edit your name"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit your name" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="359dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="302dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/arrow_right_black_18dp"
        android:lineSpacingExtra="10sp"
        android:text="Edit your email"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit your email" />

    <Button
        android:id="@+id/buttonPassword"
        android:layout_width="355dp"
        android:layout_height="83dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="218dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/arrow_right_black_18dp"
        android:text="Edit your password"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit your password" />

    <Button
        android:id="@+id/buttonBirthday"
        android:layout_width="355dp"
        android:layout_height="72dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="149dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/arrow_right_black_18dp"
        android:text="Edit your birthday"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit your birthday" />

    <ImageButton
        android:id="@+id/imageButtonPhoto"
        android:layout_width="262dp"
        android:layout_height="205dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="482dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>